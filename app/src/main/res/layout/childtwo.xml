<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ryello"
        android:id="@+id/imageofchildtwo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OCT 14 | 10:20 AM"
        android:id="@+id/texttwoofchildtwo"
        android:layout_below="@id/textone"
        android:textSize="@dimen/textsize"
        android:layout_alignParentRight="true"

        />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We met a new "
        android:id="@+id/textoneofchildtwo"
        android:textSize="@dimen/textsize"
        android:textColor="@color/textonecolor"
        android:layout_alignParentRight="true"
        android:layout_below="@id/texttwoofchildtwo"
        />


</RelativeLayout>